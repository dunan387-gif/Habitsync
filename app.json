{
  "expo": {
    "name": "HabitSyncer Productivity",
    "slug": "habitsyncer-productivity",
    "version": "1.0.0",
    "description": "Sync your habits, sync your life. Transform your daily routines with powerful habit tracking, gamification, and AI-powered insights. Build lasting habits with streaks, achievements, and personalized motivation.",
    "orientation": "portrait",
    "icon": "./assets/images/habit-tracker-icon-1024.png",
    "scheme": "habitsyncer",
    "userInterfaceStyle": "automatic",
    "primaryColor": "#4F46E5",
    "splash": {
      "image": "./assets/images/habit-tracker-icon-1024.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sabbir404.habitsyncer",
      "buildNumber": "1",
      "icon": "./assets/images/habit-tracker-icon-1024.png",
      "infoPlist": {
        "NSUserNotificationsUsageDescription": "HabitSyncer uses notifications to remind you about your daily habits and celebrate your achievements."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/habit-tracker-icon-1024.png",
        "backgroundColor": "#4F46E5",
        "monochromeImage": "./assets/images/habit-tracker-icon-96.png"
      },
      "icon": "./assets/images/habit-tracker-icon-1024.png",
      "package": "com.sabbir404.habitsyncer",
      "versionCode": 1,
      "permissions": [
        "NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM",
        "VIBRATE",
        "WAKE_LOCK",
        "ACCESS_NETWORK_STATE",
        "INTERNET"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "allowBackup": true,
      "enableProguardInReleaseBuilds": true,
      "enableShrinkResourcesInReleaseBuilds": true,
      "largeHeap": true,
      "hardwareAccelerated": true,
      "usesCleartextTraffic": false,
      "backupAgent": "com.sabbir404.habitsyncerproductivity.BackupAgent"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/habit-tracker-icon-192.png",
      "icon": "./assets/images/habit-tracker-icon-512.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/habit-tracker-icon-96.png",
          "color": "#ffffff"
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f998d5c5-325b-4f01-9a46-55f617407d56"
      }
    },
    "owner": "sabbir404"
  }
}
