{
  "expo": {
    "name": "HabitSync Productivity",
    "slug": "habitsync-productivity",
    "version": "1.0.0",
    "description": "Sync your habits, sync your life. Transform your daily routines with powerful habit tracking, gamification, and AI-powered insights. Build lasting habits with streaks, achievements, and personalized motivation.",
    "orientation": "portrait",
    "icon": "./assets/images/habit-tracker-icon.png",
    "scheme": "habitsync",
    "userInterfaceStyle": "automatic",
    "privacy": "public",
    "primaryColor": "#4F46E5",
    "splash": {
      "image": "./assets/images/habit-tracker-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sabbir404.habitsyncproductivity",
      "buildNumber": "1",
      "infoPlist": {
        "NSUserNotificationsUsageDescription": "HabitSync uses notifications to remind you about your daily habits and celebrate your achievements."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/habit-tracker-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "package": "com.sabbir404.habitsyncproductivity",
      "versionCode": 1,
      "permissions": [
        "NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#ffffff"
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "814e9d1e-7dea-4bd4-91b4-daab7b09b77a"
      }
    },
    "owner": "sabbir404",
    "category": "PRODUCTIVITY",
    "keywords": [
      "habits",
      "productivity",
      "tracking",
      "goals",
      "routine",
      "gamification",
      "sync",
      "lifestyle"
    ],
    "githubUrl": "https://github.com/Sabbir505/habit-tracker-app",
    "website": "https://chipper-sunshine-0720f5.netlify.app/",
    "privacyPolicyUrl": "https://sabbir505.github.io/Privacy-Policy-for-the-Habit-Tracker-App/"
  }
}
