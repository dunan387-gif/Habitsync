<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences and settings -->
        <include domain="sharedpref" path="."/>
        
        <!-- Include database files -->
        <include domain="database" path="."/>
        
        <!-- Include files in app's private directory -->
        <include domain="file" path="."/>
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="encryption_key"/>
        <exclude domain="sharedpref" path="encryption_salt"/>
        <exclude domain="sharedpref" path="auth_token"/>
        <exclude domain="sharedpref" path="user_password"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include user preferences and settings -->
        <include domain="sharedpref" path="."/>
        
        <!-- Include database files -->
        <include domain="database" path="."/>
        
        <!-- Include files in app's private directory -->
        <include domain="file" path="."/>
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="encryption_key"/>
        <exclude domain="sharedpref" path="encryption_salt"/>
        <exclude domain="sharedpref" path="auth_token"/>
        <exclude domain="sharedpref" path="user_password"/>
    </device-transfer>
</data-extraction-rules>
